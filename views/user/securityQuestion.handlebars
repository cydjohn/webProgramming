
<div class="row" style="margin: auto; width: 80%; padding: 10px;">
    <div class="col-sm-3"><br/>
        <form id="securityAnswer" onsubmit="return validateSecurity()" method="post" action="/checkSecurity">
            <!-- -->
            <div class="form-group" id="questionID">
                <label for="question">Question: </label>{{user.security}}
                <input type="hidden" class="form-control" id="answer1" name="answer1" value="{{user.answer}}" />
                <input type="hidden" class="form-control" id="email" name="email" value="{{user.email}}" />
            </div>
            <!-- -->
            <div class="form-group" id="answerID">
                <label for="answer">Answer</label>
                <input type="text" class="form-control" id="answer" name="answer" placeholder="Enter answer" value="{{answer}}">
            </div>
            <div class="form-group" id="changePassword" hidden>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" value="{{password}}">
                </div>
                <div class="form-group">
                    <label for="cnfpassword">Confirm Password</label>
                    <input type="password" class="form-control" id="cnfpassword" name="cnfpassword" placeholder="Confirm password" value="{{password}}">
                </div>
            </div>
            <!-- -->
            <div class="form-group hidden" id="error-container">
                <div class="alert alert-danger text-goes-here">
                </div>
            </div>
            <!-- -->
            {{#if message}}
                <div class="alert alert-danger">
                    <p><strong></strong>{{message}}</p>
                </div>
            {{/if}}
            <!-- -->
            <div class="form-group">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </form>
    </div>
</div>
