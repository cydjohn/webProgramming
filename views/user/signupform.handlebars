
<div class="row">
    <div class="col-sm-10"><br/>
        <form id="signupform" onsubmit="return validateSignupForm()" method="post" action="/signup" enctype="multipart/form-data">
            <table class="tableBorder">
                <tr>
                    <div class="form-group hidden" id="error-container">
                        <div class="alert alert-danger text-goes-here">
                            {{ error }}
                        </div>
                    </div>
                    {{#if error }}
                        <div class="form-group" id="error-container">
                            <div class="alert alert-danger text-goes-here">
                                {{ error }}
                            </div>
                        </div>
                    {{/if}}
                </tr>
            </table>
            <table class="tableBorder">
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="firstname">First Name</label>
                            <input type="text" class="form-control" id="firstname" name="firstname" placeholder="Enter firstname" value="{{firstname}}">
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="lastname">Last Name</label>
                            <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Enter lastname" value="{{lastname}}">
                        </div>
                    </td>
                </tr>
                <!-- -->
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="E.g. ducks@stevens.edu" value="{{email}}">
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="gender">Gender</label>
                            <label class="radio-inline signup-form-labels">
                                <input type="radio" id="mgender" name="gender" value="Male" checked> Male
                            </label>
                            <label class="radio-inline signup-form-labels">
                                <input type="radio" id="fgender" name="gender" value="Female" > Female
                            </label>
                        </div>
                    </td>
                </tr>
                <!-- -->
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" value="{{password}}">
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="cnfpassword">Confirm Password</label>
                            <input type="password" class="form-control" id="cnfpassword" name="cnfpassword" placeholder="Confirm password" value="{{password}}">
                        </div>
                    </td>
                </tr>
                <!-- -->
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="textverify">Profile Picture</label>
                            <input type="file" class="form-control" id="userPic" name="userPic" value="{{userPic}}">
                            <img style="height:50px;width:50px;float:left;" id="imageHome" src="#" alt="your image" />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="userphone">Contact Number</label>
                            <input type="text" class="form-control" id="userphone" name="userphone" placeholder="E.g. +1 777-777-7777" value="{{userphone}}">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="textarea" class="form-control" id="address" name="address" placeholder="E.g. 1 Castle point on hudson" value="{{address}}">
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="city">City</label>
                            <input type="text" class="form-control" id="city" name="city" placeholder="E.g. Jersey City" value="{{city}}">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="state">State</label>
                            <input type="text" class="form-control" id="state" name="state" placeholder="E.g. NJ" value="{{state}}">
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="zipcode">Zip code</label>
                            <input type="number" class="form-control" id="zipcode" name="zipcode" placeholder="E.g. 07306"  value="{{zipcode}}">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="textverify">Enter the text shown</label>
                            <input type="text" class="form-control" id="textverify" name="textverify" placeholder="Enter code here.." value="{{textverify}}">
                        </div>
                    </td>
                    <td style="padding-top:20px">
                        <div class="disableCopy">
                            <span id="codeDiv" style="font-size: 24px; color: red; background-color:burlywood"></span>
                            <input type="hidden" id="codeValue"/>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Sign up</button>
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<script>
    var verificationcode = "";
    var values = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";

    for( var i=0; i < 5; i++ )
        verificationcode += values.charAt(Math.floor(Math.random() * values.length));
    document.getElementById("codeValue").value = verificationcode;
    document.getElementById("codeDiv").innerHTML = verificationcode;
</script>
<style>
    table {
        width: 100%;
        border-collapse: separate;

    }

    .tableBorder {
        border-spacing: 50px 0 !important;
    }

    td {
        width: 300px;
        padding: 10px 0;
    }
    .disableCopy {
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        -o-user-select: none;
        user-select: none;
    }
</style>