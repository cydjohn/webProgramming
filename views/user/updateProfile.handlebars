
<div class="row">
    <div class="col-sm-10"><br/>
        <form id="updateUserForm" onsubmit="parent.scrollTo(0, 0);return validateUserUpdateForm()" method="post" enctype="multipart/form-data">
            <table class="tableBorder">
                <tr>
                    <div class="form-group hidden" id="error-container" style="padding-left: 50px;padding-right: 50px;">
                        <div class="alert alert-danger text-goes-here">
                            {{ error }}
                        </div>
                    </div>
                    <div class="form-group hidden" id="error-container1" style="padding-left: 50px;padding-right: 50px;">
                        <div class="alert alert-danger text-goes-here">
                            <div id ="fnameerror">
                            </div>
                            <div id ="lnameerror">
                            </div>
                            <div id ="emailerror">
                            </div>
                            <div id ="passworderror">
                            </div>
                            <div id ="cnfpassworderror">
                            </div>
                            <div id ="passwordValiderror">
                            </div>
                            <div id ="phoneerror">
                            </div>
                            <div id ="addresserror">
                            </div>
                        </div>
                    </div>
                    {{#if error }}
                    <div class="form-group" id="error-container">
                        <div class="alert alert-danger text-goes-here">
                            {{error }}
                        </div>
                    </div>
                    {{/if}}
                </tr>
            </table>
            <table class="tableBorder">
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Enter first name" value="{{user.firstName}}">
                        </div>
                    </td>
                    <td>
                        <label for="lastName">Last Name</label>
                        <div class="form-group">
                            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Enter last name" value="{{user.lastName}}">
                        </div>
                    </td>
                </tr>
                <!-- -->
                <tr>
                    <td>
                        <div class="form-group">
                            <!--<label for="email">Email</label>-->
                            <input type="hidden" class="form-control" id="email" name="email" placeholder="E.g. ducks@stevens.edu" value="{{user.email}}">
                        </div>
                        <div class="form-group">
                            <label for="phoneNumber">Contact Number</label>
                            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="E.g. 666-666-6666" value="{{user.phoneNumber}}">
                        </div>
                    </td>
                    <td>
                        <!--<div class="form-group">
                            <label for="gender">Gender</label>
                            <label class="radio-inline signup-form-labels">
                                <input type="radio" id="mgender" name="gender" value="Male" checked> Male
                            </label>
                            <label class="radio-inline signup-form-labels">
                                <input type="radio" id="fgender" name="gender" value="Female" > Female
                            </label>
                        </div>-->
                    </td>
                </tr>
                <!-- -->
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" value="">
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="cnfpassword">Confirm Password</label>
                            <input type="password" class="form-control" id="cnfpassword" name="cnfpassword" placeholder="Confirm password" value="">
                        </div>
                    </td>
                </tr>
                <!-- -->
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="textarea" class="form-control" id="address" name="address" placeholder="E.g. 1 Castle point on hudson" value="{{user.address}}">
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="city">City</label>
                            <input type="text" class="form-control" id="city" name="city" placeholder="E.g. Jersey City" value="{{user.city}}">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="state">State</label>
                            <input type="text" class="form-control" id="state" name="state" placeholder="E.g. NJ" value="{{user.state}}">
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="zipCode">Zip code</label>
                            <input type="number" class="form-control" id="zipCode" name="zipCode" placeholder="E.g. 07306"  value="{{user.zipCode}}">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="status">Security Question</label>
                            <select style="color:black" class="form-control" id="securityQuestion" name="securityQuestion">
                                <option value="1" selected>City you were born in?</option>
                                <option value="2">Mother's maiden name?</option>
                            </select>
                            <input type="text" class="form-control"  name="securityAnswer" id="securityAnswer" value=""/>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Update</button>
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<style>
    table {
        width: 100%;
        border-collapse: separate;

    }

    .tableBorder {
        border-spacing: 50px 0 !important;
    }

    td {
        width: 300px;
        padding: 10px 0;
    }
    .disableCopy {
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        -o-user-select: none;
        user-select: none;
    }
</style>
